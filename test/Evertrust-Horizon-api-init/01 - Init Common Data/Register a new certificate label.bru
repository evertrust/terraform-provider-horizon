meta {
  name: Register a new certificate label
  type: http
  seq: 2
}

post {
  url: {{horizonUrl}}/api/v1/certificate/labels
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "COMMON_LABEL",
      "regex": null,
      "displayName" : [],
      "description": []
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("COMMON_LABEL", res.getBody().name)
}
