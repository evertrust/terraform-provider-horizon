meta {
  name: Register a x509 credential
  type: http
  seq: 3
}

post {
  url: {{horizonUrl}}/api/v1/security/credentials
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "ejbcaAuthCredentials",
      "type": "x509",
      "store": {
          "certificate": "{{tapCertificate}}",
          "value": "{{tapPrivateKey}}"
      },
      "targets": [
          "pkiconnector"
      ]
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
  res.body.type: isDefined
  res.body.type: eq x509
  res.body.store: isDefined
}

script:post-response {
  bru.setEnvVar("ejbcaAuthCredentials", res.getBody().name)
}
