meta {
  name: Register lab proxy
  type: http
  seq: 1
}

post {
  url: {{horizonUrl}}/api/v1/proxy/httpproxies
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "lab-proxy",
      "host": "gw.lab.evertrust.fr",
      "port": 8888
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("proxyName", res.getBody().name)
}
