meta {
  name: Register a new authorized integrated scep with dynamic maping profile
  type: http
  seq: 15
}

post {
  url: {{horizonUrl}}/api/v1/certificate/profiles
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "module": "scep",
      "enabled": true,
      "name": "evertrust-integrated-dynamic-scep-authorized",
      "scepRA": "evertrust-scep-integrated-ra",
      "caps": [
          "SHA-256",
          "AES"
      ],
      "encryptionAlgorithm": "AES_256",
      "mode": "ra",
      "revocation": {},
      "pkiConnector": "evertrust-integrated-serverauth",
      "dnWhitelist": false,
      "revokeOnScepRenew": true,
      "passwordPolicy": null,
      "revocationReason": "cACompromise",
      "mscepEmulation": false,
      "enrollmentNotifications": [],
      "renewalNotifications": [],
      "authorizationLevels": {
          "enroll": {
              "accessLevel": "authorized"
          },
          "requestEnroll": {
              "accessLevel": "authorized"
          },
          "approveEnroll": {
              "accessLevel": "authorized"
          },
          "revoke": {
              "accessLevel": "authorized"
          },
          "requestRevoke": {
              "accessLevel": "authorized"
          },
          "approveRevoke": {
              "accessLevel": "authorized"
          },
          "search": {
              "accessLevel": "authorized"
          },
          "migrate": {
              "accessLevel": "authorized"
          },
          "requestMigrate": {
              "accessLevel": "authorized"
          },
          "approveMigrate": {
              "accessLevel": "authorized"
          },
          "update": {
              "accessLevel": "authorized"
          },
          "requestUpdate": {
              "accessLevel": "authorized"
          },
          "approveUpdate": {
              "accessLevel": "authorized"
          }
      },
      "cryptoPolicy": {
          "centralized": false,
          "decentralized": true,
          "escrow": false,
          "p12passwordPolicy": null,
          "p12storeEncryptionType": "DES_AVERAGE"
      },
      "selfPermissions": {
          "selfRevoke": false,
          "selfRequestRevoke": false,
          "selfUpdate": false,
          "selfRequestUpdate": false,
          "selfRecover": null,
          "selfRequestRecover": null
      },
      "requestsPolicy": {
          "revoke": "1 hour",
          "update": "1 hour",
          "migrate": "1 hour"
      },
      "displayName": [],
      "description": [],
      "certificateTemplate": {
          "labels": [
              {
                  "label": "{{COMMON_LABEL}}",
                  "mandatory": true,
                  "editableByRequester": true,
                  "editableByApprover": false
              }
          ],
          "metadataPolicies": [],
          "subject": [
              {
                  "type": "CN",
                  "computationRule": "{{url.enroll.label.COMMON_LABEL}}",
                  "mandatory": true,
                  "editableByRequester": false,
                  "editableByApprover": false
              },
              {
                  "type": "E",
                  "computationRule": "{{url.enroll.label.COMMON_LABEL}}",
                  "mandatory": true,
                  "editableByRequester": false,
                  "editableByApprover": false
              },
              {
                  "type": "ST",
                  "computationRule": "{{csr.subject.cn.1}}",
                  "mandatory": true,
                  "editableByRequester": false,
                  "editableByApprover": false
              }
          ],
          "sans": [
              {
                  "type": "DNSNAME",
                  "editableByRequester": true,
                  "editableByApprover": false,
                  "min": 1,
                  "max": 1
              }
          ],
          "extensions": []
      },
      "constraints": {
          "keyStrictCheck": false
      },
      "csrDataMapping": {},
      "triggers": {
          "onExpire": null,
          "onPendingEnroll": null,
          "onPendingRevoke": null,
          "onPendingUpdate": null,
          "onPendingMigrate": null
      },
      "renewalPeriod": "740 days",
      "preValidationTtl": 0,
      "authorizationMode": "authorized"
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("scepProfileName", res.getBody().name)
}
