meta {
  name: Register a new ejbca SCEP registration authority
  type: http
  seq: 4
}

post {
  url: {{horizonUrl}}/api/v1/security/credentials
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "evertrust-scep-ejbca-ra",
      "type": "x509",
      "store": {
          "certificate": "{{raCertificate}}",
          "value": "{{raPrivateKey}}"
      },
      "targets": [
          "scepra"
      ]
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("scepRaName", res.getBody().name)
}
