meta {
  name: Register a new integrated SCEP registration authority
  type: http
  seq: 5
}

post {
  url: {{horizonUrl}}/api/v1/security/credentials
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "evertrust-scep-integrated-ra",
      "type": "x509",
      "store": {
          "certificate": "{{intScepRaCertificate}}",
          "value": "{{intScepRaPrivateKey}}"
      },
      "targets": [
          "scepra"
      ]
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("scepRaName", res.getBody().name)
}
