meta {
  name: Register a new password policy
  type: http
  seq: 1
}

post {
  url: {{horizonUrl}}/api/v1/security/passwordpolicies
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "challengePolicy",
      "minChar": 16,
      "maxChar": 16,
      "minUpChar": 2,
      "minLoChar": 2,
      "minDiChar": 2,
      "spChar" : ""
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("passwordPolicyName", res.getBody().name)
}
