meta {
  name: register a local identity for webra enrolment
  type: http
  seq: 1
}

post {
  url: {{horizonUrl}}/api/v1/security/identity/locals
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
  X-API-IDPROV: {{LOCAL-PROVIDER-NAME}}
}

body:json {
  {
    "identifier": "test" ,
    "email": "test@evertrust.fr" ,
    "name": "Horizon Administrator test" ,
    "password": "test"
  }

}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
  res.body._id: isDefined
}