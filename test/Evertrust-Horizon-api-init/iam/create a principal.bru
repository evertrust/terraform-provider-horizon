meta {
  name: register a principal for webra enrolment
  type: http
  seq: 2
}

post {
  url: {{horizonUrl}}/api/v1/security/principalinfos
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
  X-API-IDPROV: {{LOCAL-PROVIDER-NAME}}
}

body:json {
  {
    "identifier":"test",
    "contact":"test@evertrust.fr",
    "permissions":[{"value":"lifecycle:*:*:enroll"}],
    "enabled":true
  }

}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.permissions: isDefined
  res.body._id: isDefined
}