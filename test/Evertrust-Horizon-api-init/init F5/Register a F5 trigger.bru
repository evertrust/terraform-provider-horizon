meta {
  name: Register a F5 trigger
  type: http
  seq: 3
}

post {
  url: {{horizonUrl}}/api/v1/triggers
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "F5Trigger",
      "type": "f5client",
      "connector": "{{F5Connector}}",
      "retries": 10
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}

script:post-response {
  bru.setEnvVar("F5Trigger", res.getBody().name)
}
