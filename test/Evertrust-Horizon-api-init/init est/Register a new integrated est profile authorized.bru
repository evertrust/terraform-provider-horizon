meta {
  name: Register a new integrated est profile authorized
  type: http
  seq: 2
}

post {
  url: {{horizonUrl}}/api/v1/certificate/profiles
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "module": "est",
      "enabled": true,
      "name": "evertrust-integrated-est-authorized",
      "ca": "integratedrootca",
      "authorizationMode": "authorized",
      "pkiConnector": "evertrust-integrated-userauth",
      "renewalAuthorizedCas": [
          "integratedissuingca",
          "integratedrootca"
      ],
      "certificateTemplate": {
          "labels": [
              {
                  "label": "{{COMMON_LABEL}}",
                  "editableByRequester": true,
                  "editableByApprover": true,
                  "mandatory": true
              }
          ]
      },
      "renewalPeriod": "740d",
      "requestTtl": "1h",
      "dnWhitelist": false,
      "revokeOnEstRenew": true,
      "revocationReason": "unspecified",
      "authorizationLevels": {
          "enroll": {
              "accessLevel": "authorized"
          },
          "revoke": {
              "accessLevel": "authorized"
          },
          "requestRevoke": {
              "accessLevel": "authorized"
          },
          "approveRevoke": {
              "accessLevel": "authorized"
          },
          "search": {
              "accessLevel": "authorized"
          },
          "requestUpdate": {
              "accessLevel": "authorized"
          },
          "approveUpdate": {
              "accessLevel": "authorized"
          },
          "update": {
              "accessLevel": "authorized"
          }
      },
      "displayName": [],
      "description": [],
      "notifications": {},
      "constraints": {
          "rsaMinimalKeySize": 2048,
          "allowedECurves": "secp256r1,secp384r1,secp521r1",
          "allowedDomains": ".*evertrust\\.fr",
          "allowedDnsDomains": ".*"
      },
      "csrDataMapping": {},
      "triggers": {},
      "requestService": {},
      "requestsPolicy": {
          "revoke": "30m"
      },
      "selfPermissions": {},
      "cryptoPolicy": {
          "centralized": false,
          "decentralized": true,
          "escrow": false
      }
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}