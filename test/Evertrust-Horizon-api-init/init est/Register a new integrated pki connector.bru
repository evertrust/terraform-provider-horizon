meta {
  name: Register a new integrated pki connector
  type: http
  seq: 1
}

post {
  url: {{horizonUrl}}/api/v1/pki/connectors
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name":"evertrust-integrated-userauth",
      "type":"integrated",
      "crlPath": "/tmp/evertrust-issuing-qa.crl",
      "certType":"client",
      "worker": 5,
      "cryptoType": "legacy"
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
}