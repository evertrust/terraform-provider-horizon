meta {
  name: Register a password credentials
  type: http
  seq: 1
}

post {
  url: {{horizonUrl}}/api/v1/security/credentials
  body: json
  auth: none
}

headers {
  X-API-ID: {{X-API-ID}}
  X-API-KEY: {{X-API-KEY}}
}

body:json {
  {
      "name": "initPasswordCredentials",
      "type": "password",
      "login": "login",
      "password": {
          "value": "test"
      },
      "targets": [
          "mdm",
          "thirdparty"
      ]
  }
}

assert {
  res.body: isJson
  res.status: eq 201
  res.body.name: isDefined
  res.body.type: isDefined
  res.body.type: eq password
  res.body.password: isDefined
}

script:post-response {
  bru.setEnvVar("tpAuthCredentials", res.getBody().name)
}
